---
import { fetchFromAPI, STRAPI_URL_IMAGES } from "../lib/conection";

const cines = (await fetchFromAPI("cines")) || [];
const musicas = (await fetchFromAPI("musicas")) || [];
const noticias = (await fetchFromAPI("noticias")) || [];

const todos = [
    ...cines.map((item: any) => ({
        ...item,
        category: "Cine",
        url: `/Cine/${item.slug}`,
    })),
    ...musicas.map((item: any) => ({
        ...item,
        category: "Música",
        url: `/Musica/${item.slug}`,
    })),
    ...noticias.map((item: any) => ({
        ...item,
        category: "Noticias",
        url: `/Noticias/${item.slug}`,
    })),
];

const items = todos
    .sort(
        (a: any, b: any) =>
            new Date(b.fecha_publicacion).getTime() -
            new Date(a.fecha_publicacion).getTime(),
    )
    .slice(0, 6);
---

<section class="py-16 bg-white">
    <div class="container mx-auto px-6 md:px-12">
        <div class="flex justify-between items-end mb-10">
            <h2 class="text-3xl font-bold uppercase tracking-widest">
                Últimas Publicaciones
            </h2>
            <span
                class="hidden md:block text-xs font-bold uppercase text-gray-400 tracking-widest"
                >Recientes</span
            >
        </div>

           <!--grid de los 6 articulos -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-10">
            {
                items.map((post: any) => (
                    <article class="group h-full flex flex-col">
                        <a href={post.url} class="block flex-1">
                            <div class="relative overflow-hidden rounded-2xl mb-5 aspect-[4/3] bg-gray-100">
                                {post.portada ? (
                                    <img
                                        src={`${STRAPI_URL_IMAGES}${post.portada.url}`}
                                        alt={post.Titulo}
                                        loading="lazy"
                                        class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                                    />
                                ) : (
                                    <div class="w-full h-full flex items-center justify-center text-gray-400 text-xs uppercase">
                                        Sin imagen
                                    </div>
                                )}
                            
                                <span class="absolute top-4 left-4 bg-white/90 backdrop-blur px-3 py-1 text-[10px] font-bold uppercase tracking-widest shadow-sm rounded-full">
                                    {post.category}
                                </span>
                            </div>

                          
                            <div class="flex flex-col flex-1">
                       
                                <time class="text-xs text-gray-500 uppercase font-medium mb-2 block">
                                    {new Date(
                                        post.fecha_publicacion,
                                    ).toLocaleDateString("es-ES", {
                                        dateStyle: "long",
                                    })}
                                </time>

                             
                                <h3 class="text-lg font-bold leading-tight mb-3 group-hover:text-blue-600 transition-colors">
                                    {post.Titulo}
                                </h3>

                                
                                <p class="text-gray-600 text-sm leading-relaxed line-clamp-3 mb-4 flex-1">
                                    {post.resumen}
                                </p>

                            
                                <span class="text-xs font-bold uppercase tracking-widest underline decoration-1 underline-offset-4 group-hover:text-blue-600 transition-colors">
                                    Leer más
                                </span>
                            </div>
                        </a>
                    </article>
                ))
            }
        </div>
    </div>
</section>
