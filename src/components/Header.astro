---
import { fetchFromAPI } from "../lib/conection";

interface Menu {
   label: string;
   url: string;
}
const menu: Menu[] = await fetchFromAPI('navmenus');
---


<header class="sticky top-0 z-50 w-full bg-white/95 backdrop-blur-md border-b border-neutral-200 transition-all duration-300">
   <div class="container mx-auto px-6 md:px-12">
       <div class="flex justify-between items-center h-20">


         <!--logotipo de texto -->
           <div class="flex-shrink-0">
               <a
                       href="/"
                       class="text-black font-sans font-bold text-2xl tracking-[0.15em] uppercase hover:opacity-70 transition-opacity duration-300"
               >
                   Starless
               </a>
           </div>


          <!--menu de navegacion -->
           <div>
               <nav>
                   <ul class="flex items-center gap-8">
                       {
                         menu.map((item) => (
                                <li class="group relative">
                                <a
                                href={item.url}class="text-neutral-900 font-sans font-medium uppercase text-[11px] tracking-[0.2em] hover:text-black transition-colors duration-300 py-2" > 
                                {item.label}
                                <span class="absolute bottom-0 left-0 w-0 h-[1px] bg-black transition-all duration-300 ease-out group-hover:w-full"></span>
                                </a>
                                   </li>
                           ))
                       }
                   </ul>
               </nav>
           </div>


       </div>
   </div>
</header>
